<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="333.0" prefWidth="320.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.otp2_week3_lecture_assignment.FuelConsumptionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <VBox prefHeight="74.0" prefWidth="280.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <VBox prefHeight="49.0" prefWidth="280.0">
               <children>
                  <Label fx:id="labelDistance" text="%distance.label" />
                  <TextField fx:id="textFieldDistance" prefHeight="0.0" prefWidth="280.0" />
               </children>
            </VBox>
            <VBox prefHeight="38.0" prefWidth="280.0">
               <children>
                  <Label fx:id="labelFuel" text="%fuel.label" />
                  <TextField fx:id="textFieldFuel" prefHeight="26.0" prefWidth="326.0" />
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnCalculate" mnemonicParsing="false" text="%calculate.button">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                        <Label fx:id="labelResult" text="%result.label" visible="false"/>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox prefHeight="50.0" prefWidth="280.0" spacing="20.0">
         <children>
            <Button fx:id="btnEN" mnemonicParsing="false" text="EN" />
            <Button fx:id="btnFR" mnemonicParsing="false" text="FR" />
            <Button fx:id="btnJP" mnemonicParsing="false" text="JP" />
            <Button fx:id="btnIR" mnemonicParsing="false" text="IR" />
         </children>
      </VBox>
   </children>
</VBox>
